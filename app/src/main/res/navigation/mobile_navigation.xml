<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="pl.polsl.sensordatacollector.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="pl.polsl.sensordatacollector.ui.notifications.NotificationsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_settings_to_mainActivity2"
            app:destination="@id/mainActivity2" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="pl.polsl.sensordatacollector.MainActivity"
        android:label="MainActivity" />

    <activity
        android:id="@+id/mainActivity2"
        android:name="pl.polsl.sensordatacollector.MainActivity2"
        android:label="MainActivity2"/>

</navigation>